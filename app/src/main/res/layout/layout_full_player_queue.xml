<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <uk.akane.cupertino.widget.button.OverlayPillButton
        android:id="@+id/btnShuffle"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:icon="@drawable/ic_nowplaying_shuffle"
        app:iconSize="40dp"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnRepeat"
        app:layout_constraintHorizontal_chainStyle="spread"
        />

    <uk.akane.cupertino.widget.button.OverlayPillButton
        android:id="@+id/btnRepeat"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:icon="@drawable/ic_nowplaying_repeat"
        app:iconSize="40dp"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toTopOf="@id/btnShuffle"
        app:layout_constraintStart_toEndOf="@id/btnShuffle"
        app:layout_constraintEnd_toStartOf="@id/btnAutoplay"
        />

    <uk.akane.cupertino.widget.button.OverlayPillButton
        android:id="@+id/btnAutoplay"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="32dp"
        app:icon="@drawable/ic_nowplaying_autoplay"
        app:iconSize="40dp"
        app:cornerRadius="10dp"
        android:checked="true"
        app:layout_constraintTop_toTopOf="@id/btnShuffle"
        app:layout_constraintStart_toEndOf="@id/btnRepeat"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <uk.akane.cupertino.widget.OverlayTextView
        android:id="@+id/queue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:fontFamily="@font/inter_semibold"
        android:textSize="18sp"
        android:includeFontPadding="false"
        android:text="@string/queue"
        android:maxLines="1"
        app:textViewLayer="standard"
        app:layout_constraintTop_toBottomOf="@id/btnShuffle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

        <uk.akane.accord.ui.components.FadingVerticalEdgeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:fel_edge="top|bottom"
        app:fel_size_top="4dp"
        app:fel_size_bottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/queue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/queue_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:overScrollMode="never"
            tools:listitem="@layout/layout_queue_item"
            />
    </uk.akane.accord.ui.components.FadingVerticalEdgeLayout>

</merge>
