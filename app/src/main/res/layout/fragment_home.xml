<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/collapsed_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bottom_nav_home"
        android:layout_marginTop="18dp"
        android:textSize="34sp"
        android:fontFamily="@font/inter_bold"
        android:textColor="@color/onSurfaceColor"
        android:includeFontPadding="false"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_settings"
        app:tint="@color/accentColor"
        android:layout_marginEnd="18dp"
        app:layout_constraintTop_toTopOf="@id/collapsed_title"
        app:layout_constraintBottom_toBottomOf="@id/collapsed_title"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>